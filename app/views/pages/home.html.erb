<div class='nhsuk-grid-row'>
  <div class='nhsuk-grid-column-two-thirds'>
    <h2><%= I18n.t('app.name', version: EsrApi::VERSION) %></h2>
    <p>
      <%= I18n.t('navigation.homepage.service_functions') %>:
    </p>
    <ul>
      <li>
        <%= I18n.t('navigation.homepage.view_data') %>
      </li>
      <li>
        <%= I18n.t('navigation.homepage.grant_api_access') %>
      </li>
    </ul>

    <%= render 'devise/shared/links' %>

    <h2><%= I18n.t('navigation.homepage.support') %></h2>

    <p><a href='<%= I18n.t('navigation.links.docs') %>'><%= I18n.t('navigation.homepage.view_documentation') %></a></p>

    <% points_of_contact = User.where(point_of_contact: true) %>
    <% if points_of_contact.any? %>

      <p><%= I18n.t('navigation.homepage.please_contact') %>:</p>

      <ul>
        <% points_of_contact.each do |point_of_contact| %>
          <li>
            <%= "#{point_of_contact.name} (#{point_of_contact.email})" %>
        <% end %>
      </ul>
    <% end %>

  </div>
</div>
